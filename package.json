{
  "name": "ecommerce-erp",
  "version": "1.0.0",
  "description": "Sistema gestionale completo per E-commerce",
  "main": "dist/server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "tsx watch src/server/index.ts",
    "dev:client": "vite",
    "build": "npm run build:server && npm run build:client",
    "build:server": "tsc -p tsconfig.server.json",
    "build:client": "vite build",
    "start": "node dist/server/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "vitest run",
    "lint": "eslint . --ext .ts,.vue",
    "format": "prettier --write \"src/**/*.{ts,vue,js,json}\"",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:migrate:docker": "docker-compose exec backend npm run prisma:migrate",
    "prisma:generate:docker": "docker-compose exec backend npm run prisma:generate",
    "prisma:studio": "prisma studio",
    "prisma:studio:docker": "docker-compose exec backend npm run prisma:studio",
    "prisma:seed": "tsx prisma/seed.ts",
    "prisma:seed:demo": "tsx prisma/seed-demo.ts",
    "prisma:seed:docker": "docker-compose exec backend npm run prisma:seed",
    "prisma:seed:demo:docker": "docker-compose exec backend npm run prisma:seed:demo",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:build": "docker-compose build",
    "docker:logs": "docker-compose logs -f",
    "docker:demo:up": "docker-compose -f docker-compose.demo.yml up -d",
    "docker:demo:down": "docker-compose -f docker-compose.demo.yml down",
    "docker:demo:build": "docker-compose -f docker-compose.demo.yml build",
    "docker:demo:logs": "docker-compose -f docker-compose.demo.yml logs -f",
    "shop:dev": "cd src/ecommerce-next && npm run dev",
    "shop:build": "cd src/ecommerce-next && npm run build",
    "shop:install": "cd src/ecommerce-next && npm install",
    "dev:all": "concurrently \"npm run dev:server\" \"npm run dev:client\" \"npm run shop:dev\""
  },
  "keywords": [
    "erp",
    "gestionale",
    "ecommerce",
    "inventory",
    "warehouse"
  ],
  "author": "EcommerceERP",
  "license": "MIT",
  "dependencies": {
    "@fastify/cors": "^9.0.1",
    "@fastify/jwt": "^8.0.1",
    "@fastify/multipart": "^8.3.0",
    "@fastify/rate-limit": "^9.1.0",
    "@fastify/static": "^7.0.4",
    "@fastify/swagger": "^8.15.0",
    "@fastify/swagger-ui": "^4.1.0",
    "@fastify/websocket": "^10.0.1",
    "@pinia/nuxt": "^0.5.4",
    "@prisma/client": "^5.19.1",
    "bcrypt": "^5.1.1",
    "bcryptjs": "^3.0.3",
    "bullmq": "^5.12.15",
    "chart.js": "^4.5.1",
    "dayjs": "^1.11.13",
    "dotenv": "^16.4.5",
    "exceljs": "^4.4.0",
    "fastify": "^4.28.1",
    "html5-qrcode": "^2.3.8",
    "ioredis": "^5.4.1",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "nodemailer": "^6.9.15",
    "pdfkit": "^0.15.0",
    "pinia": "^2.2.2",
    "pino": "^9.4.0",
    "pino-pretty": "^11.2.2",
    "primeicons": "^7.0.0",
    "primevue": "^3.53.0",
    "redis": "^4.7.0",
    "stripe": "^14.25.0",
    "uuid": "^10.0.0",
    "vue": "^3.5.6",
    "vue-router": "^4.4.5",
    "vuedraggable": "^4.1.0",
    "winston": "^3.14.2",
    "winston-elasticsearch": "^0.19.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/bcryptjs": "^2.4.6",
    "@types/jest": "^29.5.12",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^22.5.5",
    "@types/nodemailer": "^6.4.16",
    "@types/pdfkit": "^0.13.5",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.6.0",
    "@typescript-eslint/parser": "^8.6.0",
    "@vitejs/plugin-vue": "^5.1.4",
    "@vue/test-utils": "^2.4.6",
    "concurrently": "^9.0.1",
    "eslint": "^9.11.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-vue": "^9.28.0",
    "jest": "^29.7.0",
    "jest-mock-extended": "^4.0.0",
    "prettier": "^3.3.3",
    "prisma": "^5.19.1",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.1",
    "typescript": "^5.6.2",
    "vite": "^5.4.6",
    "vitest": "^2.1.1"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "prisma": {
    "seed": "ts-node --transpile-only prisma/seed.ts"
  }
}
