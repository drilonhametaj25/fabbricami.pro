# Application
NODE_ENV=development
PORT=3000
API_VERSION=v1

# Database
DATABASE_URL=postgresql://postgres:postgres@postgres:5432/ecommerceerp_erp?schema=public

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# WordPress Integration
WORDPRESS_URL=https://ecommerceerp.com
WORDPRESS_API_KEY=your-wordpress-api-key
WORDPRESS_WEBHOOK_SECRET=your-webhook-secret

# Email (per notifiche)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-password

# Barcode Scanner
BARCODE_WEBSOCKET_PORT=3001

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_DIR=/app/uploads

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# Logging
LOG_LEVEL=debug
ELASTICSEARCH_NODE=http://elasticsearch:9200

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_TIMEWINDOW=60000

# Costi generali (spalmare su ore lavorate o volumi)
OVERHEAD_ALLOCATION_METHOD=labor_hours

# Backup
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# Frontend
VITE_API_URL=http://localhost:3000
VITE_WS_URL=ws://localhost:3001
